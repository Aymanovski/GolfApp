@page
@model GolfApp.Pages.Locations.DetailsLocationModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location.ZipCode)
        </dd>
        <dt class="col-sm-2">
            Courses
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Name</th>
                </tr>
                @foreach (var item in ViewBag.Courses)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./EditLocation" asp-route-id="@Model.Location.LocationId">Edit</a> |
    <a asp-page="./IndexLocation">Back to List</a>
</div>
