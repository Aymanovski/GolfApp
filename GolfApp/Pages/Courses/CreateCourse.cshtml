@page
@model GolfApp.Pages.Courses.CreateCourseModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Course.Name" class="control-label"></label>
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Location" class="control-label"></label>
                <select asp-for="Course.LocationId" class="form-control" asp-items="ViewBag.Locations"></select>
            </div>
            <div class="form-group">
                <label asp-for="Course.Par" class="control-label"></label>
                <input asp-for="Course.Par" class="form-control" />
                <span asp-validation-for="Course.Par" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Type" class="control-label"></label>
                <select asp-for="Course.Type" class="form-control" asp-items="ViewBag.Types"></select>
            </div>
            <div class="form-group">
                <label asp-for="Course.DateFounded" class="control-label"></label>
                <input asp-for="Course.DateFounded" class="form-control" />
                <span asp-validation-for="Course.DateFounded" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Course.Holes" class="control-label"></label>
                <select mutliple="multiple" asp-for="HoleId" class="form-control" asp-items="ViewBag.Holes"></select>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="IndexCourse">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
