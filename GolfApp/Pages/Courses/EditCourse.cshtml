@page
@model GolfApp.Pages.Courses.EditCourseModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.CourseId" />
            <div class="form-group">
                <label asp-for="Course.Name" class="control-label"></label>
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.LocationId" class="control-label"></label>
                <select asp-for="Course.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="Course.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Par" class="control-label"></label>
                <input asp-for="Course.Par" class="form-control" />
                <span asp-validation-for="Course.Par" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Type" class="control-label"></label>
                <input asp-for="Course.Type" class="form-control" />
                <span asp-validation-for="Course.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.DateFounded" class="control-label"></label>
                <input asp-for="Course.DateFounded" class="form-control" />
                <span asp-validation-for="Course.DateFounded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexCourse">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
